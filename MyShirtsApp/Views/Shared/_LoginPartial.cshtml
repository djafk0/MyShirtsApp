@using Microsoft.AspNetCore.Identity
@using MyShirtsApp.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject IUserService Users

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var userId = User.Id();
        var userIsSeller = Users.IsSeller(userId);
        var userIsAdmin = User.IsAdmin();

        @if (!userIsAdmin)
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Carts" asp-action="Mine">
                    <img style="width: 40px;height: 30px;" src="https://gcdnb.pbrd.co/images/rZzVLgFESRry.png" />
                </a>
            </li>
            @if (userIsSeller)
            {
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Shirts" asp-action="Add">Add Shirt</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Shirts" asp-action="Mine">My shirts</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Become">Become Seller</a>
                </li>
            }
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Admin" asp-controller="Shirts" asp-action="All">Administration</a>
            </li>
        }
        @*<li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>
            </li>*@
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
