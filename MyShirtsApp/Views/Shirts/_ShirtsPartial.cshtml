@model IEnumerable<ShirtServiceModel>

<div class="row">
    @foreach (var shirt in Model)
    {
        <div class="col-md-4">

            <div class="card mb-4 bgcolor-gray border-none">
                @if (shirt.IsAvailable)
                {
                    <img src="@shirt.ImageUrl" class="cart-img-top" alt="@shirt.Name" />
                }
                else
                {
                    <img src="https://way-ve.com/SOLD.gif" style="background: url(@shirt.ImageUrl) no-repeat; background-size: 100%;" class="card-img-top" alt="@shirt.Name">
                }
                <div class="card-body">
                    <h5 class="card-title text-center">@shirt.Name</h5>
                    <p class="card-text text-center">$@shirt.Price</p>
                    <div class="text-center">
                        <a asp-controller="Shirts" asp-action="Details" asp-route-id="@shirt.Id" class="btn bgcolor-blue text-white mb-1">Details</a>
                        @if (ViewBag.AllowShirtEdit == true || User.IsAdmin())
                        {
                            <a asp-controller="Shirts" asp-action="Delete" asp-route-id="@shirt.Id" class="btn btn-danger text-white mb-1">Delete</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>