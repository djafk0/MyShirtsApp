@model BecomeSellerFormModel

@{
    ViewData["Title"] = "Become Seller";
}

<div class="offset-1 col-10 offset-sm-1 col-sm-10 offset-md-3 col-md-6">
    <form method="post" class="needs-validation" novalidate>
        <div>
            <h2 class="text-center mt-4">@ViewData["Title"]</h2>
        </div>
        <div class="mb-4">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter your name" required>
            <span asp-validation-for="Name" class="small text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" required>
            <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
        </div>
        <div class="submit-button col-12 text-center">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>
